numPedidos = int(input()) 

for i in range(1, numPedidos + 1):
    prato = input()
    calorias = int(input())
    ehVegano = input()

    if ehVegano == "s":
        tipo_vegano = "Vegano"
    else:
        tipo_vegano = "NÃ£o-vegano"

    print(f"Pedido {i}: {prato} ({tipo_vegano}) - {calorias} calorias")
